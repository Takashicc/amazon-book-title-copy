{
  "linter": {
    "ignore": [
      "dist",
      "node_modules"
    ],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "ignore": [
      "dist",
      "node_modules"
    ],
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 4,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}
