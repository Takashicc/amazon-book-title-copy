{
  "linter": {
    "ignore": [
      ".yarn",
      ".pnp.cjs",
      ".pnp.loader.mjs"
    ],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "ignore": [
      ".yarn",
      ".pnp.cjs",
      ".pnp.loader.mjs"
    ],
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}
